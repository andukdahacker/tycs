# tycs Environment Variables
# Copy to .env and fill in values as needed.

# Database — configured in Story 1.2
DATABASE_URL=postgresql://tycs:tycs@localhost:5433/tycs

# Redis — configured in Story 1.4
REDIS_URL=redis://localhost:6379

# Server — configured in Story 1.4
# NODE_ENV — controls logging format (pino-pretty in dev, JSON in production)
# NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info
HOST=0.0.0.0
PORT=3001

# Firebase (server-side) — configured in Story 2.1
FIREBASE_SERVICE_ACCOUNT=

# Firebase (client-side webapp) — configured in Story 2.1
TYCS_FIREBASE_CONFIG=

# Anthropic API — configured in Story 6.1
ANTHROPIC_API_KEY=

# Fly.io Machines API — configured in Story 3.2
TYCS_FLY_API_TOKEN=

# Sentry — configured in Story 1.7
TYCS_SENTRY_DSN=
