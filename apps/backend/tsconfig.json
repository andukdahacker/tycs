{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@mycscompanion/shared": ["../../packages/shared/src"],
      "@mycscompanion/shared/*": ["../../packages/shared/src/*"],
      "@mycscompanion/execution": ["../../packages/execution/src"],
      "@mycscompanion/execution/*": ["../../packages/execution/src/*"],
      "@mycscompanion/config": ["../../packages/config"],
      "@mycscompanion/config/*": ["../../packages/config/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
