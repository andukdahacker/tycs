{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@mycscompanion/config": ["./packages/config"],
      "@mycscompanion/config/*": ["./packages/config/*"],
      "@mycscompanion/shared": ["./packages/shared/src"],
      "@mycscompanion/shared/*": ["./packages/shared/src/*"],
      "@mycscompanion/ui": ["./packages/ui"],
      "@mycscompanion/ui/*": ["./packages/ui/*"],
      "@mycscompanion/execution": ["./packages/execution/src"],
      "@mycscompanion/execution/*": ["./packages/execution/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
